{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "projection": {
    "type": "mercator",
    "center": [134, -26],
    "scale": 900,
    "translate": [400, 300]
  },
  "layer": [
    {
      "data": {"graticule": true},
      "mark": {
        "type": "geoshape",
        "stroke": "#d3d3d3",
        "strokeWidth": 0.6
      }
    },
    {
      "data": {
        "url": "ne_10m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {"url": "TotalPopAus_2024.csv"},
            "key": "State",
            "fields": ["Total"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.8},
      "encoding": {
        "color": {
          "field": "Total",
          "type": "quantitative",
          "scale": {"scheme": "blues"},
          "title": "Population"
        },
        "tooltip": [
          {"field": "properties.name", "title": "State"},
          {"field": "Total", "title": "Population", "format": ","}
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"},
    "background": "white"
  }
}
