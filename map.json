{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.2.0.json",
  "title": "Total Population by State â€“ Australia (2024)",
  "width": 600,
  "height": 500,
  "projection": {"type": "mercator", "center": [134, -25], "scale": 850},
  "layer": [
    {
      "data": {"graticule": true},
      "mark": {"type": "geoshape", "fill": "#e6f2ff", "stroke": "#d9d9d9"}
    },
    {
      "data": {
        "url": "ne_10m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "TotalPopAus_2024.csv",
              "format": {"type": "csv", "parse": {"Total": "number"}}
            },
            "key": "State",
            "fields": ["Total"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "Total",
          "type": "quantitative",
          "scale": {"scheme": "blues"},
          "title": "Population"
        },
        "tooltip": [
          {"field": "properties.name", "title": "State"},
          {"field": "Total", "title": "Population (people)", "format": ","}
        ]
      }
    }
  ],
  "config": {}
}
