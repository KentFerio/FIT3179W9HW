{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.2.0.json",
  "autosize": { "type": "fit", "contains": "padding" },
  "title": {
    "text": "Total Population by State â€“ Australia (2024)",
    "fontSize": 20,
    "anchor": "middle"
  },
  "projection": {
    "type": "mercator",
    "center": [134, -25],
    "scale": 1300 
  },
  "layer": [
    {
      "data": { "graticule": true },
      "mark": {
        "type": "geoshape",
        "fill": "#f0f8ff",
        "stroke": "#d9d9d9"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/KentFerio/FIT3179W9HW/main/ne_10m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/KentFerio/FIT3179W9HW/main/TotalPopAus_2024.csv",
              "format": { "type": "csv", "parse": { "Total": "number" } }
            },
            "key": "State",
            "fields": ["Total"]
          }
        }
      ],
      "mark": { "type": "geoshape", "stroke": "white", "strokeWidth": 0.5 },
      "encoding": {
        "color": {
          "field": "Total",
          "type": "quantitative",
          "scale": { "scheme": "blues" },
          "title": "Population"
        },
        "tooltip": [
          { "field": "properties.name", "title": "State" },
          {
            "field": "Total",
            "title": "Population (people)",
            "format": ","
          }
        ]
      }
    }
  ],
  "config": {
    "view": { "stroke": "transparent" },
    "background": "white"
  }
}
