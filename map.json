{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total Population by State â€“ Australia (2024)",
  "width": 600,
  "height": 500,
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {"graticule": true},
      "mark": {"type": "geoshape", "stroke": "#ccc"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/KentFerio/FIT3179W9HW/main/Week9_Homework/ne_10m.json",
        "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
      },
      "transform": [
        {
          "lookup": "properties.name_en",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/KentFerio/FIT3179W9HW/main/Week9_Homework/TotalPopAus_2024.csv",
              "format": {"type": "csv", "parse": {"Total": "number"}}
            },
            "key": "State",
            "fields": ["Total"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "Total",
          "type": "quantitative",
          "scale": {"scheme": "blues"},
          "title": "Population"
        },
        "tooltip": [
          {"field": "properties.name_en", "title": "State"},
          {
            "field": "Total",
            "title": "Population",
            "format": ","
          }
        ]
      }
    }
  ]
}
